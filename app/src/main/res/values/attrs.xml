<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BoxView">
        <attr name="isSquare" format="boolean" />
        <attr name="backgroundColor" format="color" />
        <attr name="borderRadius" format="float" />
        <attr name="borderColor" format="color" />
        <attr name="borderThickness" format="integer" />
        <attr name="headerColor" format="color" />
        <attr name="headerSpacing" format="float" />
        <attr name="factColor" format="color" />
        <attr name="captionColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RoundBar">
        <attr name="cpb_progress" format="integer" />
        <attr name="cpb_progressbar_color" format="color" />
        <attr name="cpb_background_progressbar_color" format="color" />
        <attr name="cpb_progressbar_width" format="dimension" />
        <attr name="cpb_background_progressbar_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RippleView">
        <attr name="rb_color" format="color" />
        <attr name="rb_strokeWidth" format="dimension"/>
        <attr name="rb_radius" format="dimension"/>
        <attr name="rb_duration" format="integer"/>
        <attr name="rb_rippleAmount" format="integer"/>
        <attr name="rb_scale" format="float"/>
        <attr name="rb_type" format="enum">
            <enum name="fillRipple" value="0"/>
            <enum name="strokeRipple" value="1"/>
        </attr>
    </declare-styleable>
</resources>
